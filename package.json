{
  "name": "cc-chat",
  "version": "0.1.0",
  "description": "Global CLI command to run Claude Code chat interface from anywhere",
  "private": false,
  "bin": {
    "cc-chat": "./bin/cc-chat"
  },
  "files": [
    "bin/",
    "app/",
    "components/",
    "lib/",
    "public/",
    "next.config.ts",
    "tsconfig.json",
    "postcss.config.mjs",
    "components.json",
    "biome.json",
    "eslint.config.mjs",
    "next-env.d.ts",
    ".next/"
  ],
  "keywords": [
    "claude-code",
    "cli",
    "chat",
    "ai",
    "assistant",
    "global-command"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/cc-chat.git"
  },
  "homepage": "https://github.com/yourusername/cc-chat#readme",
  "scripts": {
    "dev": "next dev --turbopack --port ${PORT:-3004}",
    "build": "next build --turbopack",
    "start": "next start --port ${PORT:-3004}",
    "lint": "eslint",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "prepublishOnly": "bun run build",
    "cc-chat": "./bin/cc-chat"
  },
  "dependencies": {
    "@ai-sdk/react": "^2.0.47",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@radix-ui/react-use-controllable-state": "^1.2.2",
    "ai": "^5.0.47",
    "ai-sdk-cc-provider": "^0.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "embla-carousel-react": "^8.6.0",
    "lucide-react": "^0.544.0",
    "nanoid": "^5.1.5",
    "next": "15.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-syntax-highlighter": "^15.6.6",
    "streamdown": "^1.3.0",
    "tailwind-merge": "^3.3.1",
    "tokenlens": "^1.3.1",
    "use-stick-to-bottom": "^1.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-syntax-highlighter": "^15.5.13",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5"
  }
}
